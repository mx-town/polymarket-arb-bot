# Polymarket Arbitrage Bot Configuration
# Copy to .env and fill in your values

# ===========================================
# TRADING MODE
# ===========================================

# Set to "false" to enable real trading (default: true)
DRY_RUN=true

# ===========================================
# TRADING PARAMETERS
# ===========================================

# Minimum profit per share to trigger a trade (in dollars)
# 0.02 = only trade when YES + NO < $0.98 (2% profit)
MIN_SPREAD=0.02

# Maximum USDC to spend per arbitrage trade
MAX_POSITION_SIZE=50

# Seconds between market scans
POLL_INTERVAL=2.0

# ===========================================
# POLYMARKET CREDENTIALS (required for live trading)
# ===========================================

# Your wallet private key
# Get from: https://reveal.polymarket.com
POLYMARKET_PRIVATE_KEY=

# Your Polymarket deposit/funder address
# This is where you send USDC to fund your account
POLYMARKET_FUNDER_ADDRESS=
