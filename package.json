{
  "name": "polymarket-arb-bot",
  "private": true,
  "scripts": {
    "dev": "pnpm run dev:api & pnpm run dev:dashboard",
    "dev:api": "uv run arb-api",
    "dev:bot": "uv run arb-bot trade",
    "dev:dashboard": "pnpm --dir dashboard dev",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "format": "pnpm run format:py && pnpm run format:ts",
    "format:py": "uv run ruff format .",
    "format:ts": "pnpm --dir dashboard format",
    "lint": "pnpm run lint:py && pnpm run lint:ts",
    "lint:py": "uv run ruff check .",
    "lint:py:fix": "uv run ruff check --fix .",
    "lint:ts": "pnpm --dir dashboard lint",
    "lint:ts:fix": "pnpm --dir dashboard lint:fix",
    "check": "pnpm run lint && pnpm run format:py -- --check && pnpm --dir dashboard check",
    "test": "uv run pytest",
    "build": "pnpm --dir dashboard build"
  }
}
